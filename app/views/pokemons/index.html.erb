<h1>Pokemons</h1>


<h4>tous les pokemons</h4>

<div id="pokemons-container">
  <%= render "pokemons/pokemon", pokemons: @pokemons %>
</div>

<div class="container-fluid">

  <div class="container">
    <div class="row justify-content-center ">
      <div class="col-12 col-lg-6 m-3 mb-5">
        <%= cl_image_tag("logo_dnlxrj", width: 0.4, crop: "scale") %>
      </div>
    </div>
    <div class="row justify-content-center m-3 ">
      <p class = "text-center">Catch them All !!</p>
    </div>
  </div>

  <div class="container">
    <div class="row justify-content-center">
      <% @pokemons_to_rate.each do |pokemon| %>
        <div class="m-3-lg col-12 col-lg-4 " id="<%#= pokemon.id %>" >
            <%= link_to pokemon_path(pokemon), method: :put, remote: true  do %>
                <div class = "rounded shadow-lg bg-white text-center" id = "border-<%= if pokemon.types.include?(",") then pokemon.types.split(",").first else pokemon.types end %>">
                  <%= cl_image_tag pokemon.photos[1].key, height: 350, width: 350, class: "p-2 img-responsive"%>
                </div>
                <div class = "text-center p-3 pokemon-title" id = "<%= if pokemon.types.include?(",") then pokemon.types.split(",").first else pokemon.types end %>">
                  <%= pokemon.name.capitalize %>
                </div>
            <% end %>
        </div>
      <% end %>
    </div>
  </div>

</div>

